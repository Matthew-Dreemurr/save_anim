SHELL=/bin/bash

all : save

sauce : save

save :
	@-git add . ; git commit -am "TAMER";
	git push &\
	CPID=$$! ;\
	IFS=""; \
	ANIM=( \
		" \
	| \\/     | $$'\n'\
	|        | $$'\n'\
	|        | $$'\n'\
	|        | $$'\n'\
	" \
		" \
	|        | $$'\n'\
	| \\/     | $$'\n'\
	|        | $$'\n'\
	|        | $$'\n'\
	" \
		" \
	|        | $$'\n'\
	|        | $$'\n'\
	| \\/     | $$'\n'\
	|        | $$'\n'\
	" \
		" \
	|        | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	|        | $$'\n'\
	" \
		" \
	| ||     | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	|        | $$'\n'\
	" \
	 \
		" \
	| ||     | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	| S      | $$'\n'\
	" \
		" \
	| ||     | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	| SA     | $$'\n'\
	" \
		" \
	| ||     | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	| SAV    | $$'\n'\
	" \
		" \
	| ||     | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	| SAVI   | $$'\n'\
	" \
		" \
	| ||     | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	| SAVIN  | $$'\n'\
	" \
		" \
	| ||     | $$'\n'\
	| ||     | $$'\n'\
	| \\/     | $$'\n'\
	| SAVING | \$$'\n'\
	" \
	) ;\
	while true; do \
		for ((i = 0; i < $${#ANIM[@]}; i++)); do \
			printf "\e[36;1m%s\e[5A\e[0G\e[0m" $${ANIM[i]}; \
			sleep 0.5; \
			if [[ -z $$(ps -o pid | grep "$$CPID") ]] ;then exit ;fi \
		;done \
	;done
